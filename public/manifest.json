{
  "manifest_version": 3,
  "name": "Nombre de tu Extensión",
  "version": "1.0.0",
  "description": "Descripción clara de la funcionalidad",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Título en Tooltip",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background/sw.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content/styles.css"],
      "js": ["content/main.js"]
    }
  ],

   
  "web_accessible_resources": [{
    "resources": ["*.js", "*.css", "*.html"],
    "matches": ["<all_urls>"]
  }],


  "permissions": ["storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  
  "minimum_chrome_version": "92",
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      }
    }
  }
}